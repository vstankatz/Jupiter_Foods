<div class="centered">
  <%= render "layouts/errors", :object => @product%>
</div>
<%=form_for @product do |f|%>
<div class="row forms">
  <div class="col greenform">
    <%=f.label :Name%>
    <br>
    <%=f.text_field :name%>
  </div>
  <div class="col blueform">
    <%=f.label :Country_of_Origin%>
    <br>
    <%=f.text_field :origin%>
    <br> <br><br>
    <%=f.submit%>
  </div>
  <div class="col purpleform">
    <%=f.label :Price%>
    <br>
    <%=f.number_field :cost, value: number_to_currency(f.object.cost.to_f, delimiter: '', unit: ''), step: :any%>
  </div>
  <%end%>
</div>
