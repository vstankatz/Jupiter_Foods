<%= render "layouts/errors", :object => @product%>
<%=form_for @product do |f|%>
<%=f.label :Name%>
<%=f.text_field :name%>
<%=f.label :Country_of_Origin%>
<%=f.text_field :origin%>
<%=f.label :Price%>
<%=f.number_field :cost, value: number_to_currency(f.object.cost.to_f, delimiter: '', unit: ''), step: :any%>
<%=f.submit%>
<%end%>
